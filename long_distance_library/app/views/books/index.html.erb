<h1>Books currently in your library</h1>

<table>
	<% @books.each do |book| %>	
		<tr>
			<td><%= book.title %><td>
			<td><%= book.author %></td>
			<td><%= button_to "Edit", {action: "edit", id: book.id } %></td>
			<td><%= button_to "Delete", {action: "destroy", id: book.id } %></td>
		</tr>		
	<% end %>
</table>

<div class="sidebar">
	<%= link_to "Create a New Book!", new_book_path %>
	<%= link_to "Back to the Beginning!", root_path %>
</div>
